<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AptDealzBuyer.Views.DashboardPages.PostNewRequiremntPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:AptDealzBuyer.Extention"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    HeightRequest="30"
                    HorizontalOptions="StartAndExpand"
                     Source="IconMenu.png" x:Name="ImgMenu"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgMenu_Tapped" />
                    </Image.GestureRecognizers>
                </Image>

                <Image
                    Grid.Column="1"
                    Margin="0"
                    Aspect="AspectFill"
                    HeightRequest="45"
                    HorizontalOptions="CenterAndExpand"
                    Source="iconHeaderLogo.png"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="45" />

                <StackLayout
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconNotification.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgNotification_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconQuestion.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgQuestion_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
            </Grid>
            <!--#endregion-->
            <BoxView
                Grid.Row="1"
                BackgroundColor="{StaticResource LightGray}"
                HeightRequest="1"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand" />

            <Grid Grid.Row="2" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout
                    Grid.Row="0"
                    Margin="20,0,0,0"
                    HorizontalOptions="StartAndExpand"
                    Orientation="Horizontal">
                    <Image
                        Margin="0"
                        Aspect="AspectFit"
                        HeightRequest="25"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconBackArrow.png" x:Name="ImgBack"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="25">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgBack_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Label
                        Grid.Row="0"
                        Margin="5,0,0,0"
                        FontFamily="Poppins SemiBold"
                        FontSize="18"
                        HorizontalOptions="StartAndExpand"
                        Text="Post New Requirement"
                        TextColor="{StaticResource Black}"
                        VerticalOptions="CenterAndExpand" />
                </StackLayout>

                <ScrollView
                    Grid.Row="1"
                    Margin="20"
                    HorizontalScrollBarVisibility="Never"
                    VerticalScrollBarVisibility="Never">
                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" RowDefinitions="Auto,Auto,Auto">
                            <ext:CustomShadowFrame
                                Grid.Row="0"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtTitle"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Requirement Title *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="1"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <Grid
                                    Margin="15,0"
                                    ColumnDefinitions="*,Auto"
                                    ColumnSpacing="0">
                                    <Picker
                                        x:Name="pkCategory"
                                        Title="Category"
                                        Grid.Column="0"
                                        Margin="0,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        TextColor="{StaticResource Black}"
                                        TitleColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Image
                                        Grid.Column="1"
                                        Margin="0,10"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgCatPicker_Tapped" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Grid>
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="2"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <Grid
                                    Margin="15,0"
                                    ColumnDefinitions="*,Auto"
                                    ColumnSpacing="0">
                                    <Picker
                                        x:Name="pkSubCategory"
                                        Title="Sub Category"
                                        Grid.Column="0"
                                        Margin="0,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        TextColor="{StaticResource Black}"
                                        TitleColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Image
                                        Grid.Column="1"
                                        Margin="0,10"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgSubCatPicker_Tapped" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Grid>
                            </ext:CustomShadowFrame>
                        </Grid>

                        <ext:CustomShadowFrame
                            Grid.Row="1"
                            Margin="10"
                            Padding="0"
                            BackgroundColor="{StaticResource LightGray}"
                            CornerRadius="5"
                            HasShadow="False">
                            <Grid Margin="5" ColumnDefinitions="Auto,*,Auto,Auto">
                                <Image
                                    Grid.Column="0"
                                    Margin="0"
                                    HeightRequest="70"
                                    HorizontalOptions="CenterAndExpand"
                                    Source="imgUploadImage.png"
                                    VerticalOptions="CenterAndExpand" />

                                <Label
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    FontFamily="Poppins"
                                    FontSize="18"
                                    HorizontalOptions="CenterAndExpand"
                                    Text="Product Image"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />

                                <BoxView
                                    Grid.Column="2"
                                    BackgroundColor="{StaticResource White}"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    WidthRequest="1" />

                                <Image
                                    Grid.Column="3"
                                    Margin="10"
                                    HeightRequest="35"
                                    HorizontalOptions="EndAndExpand"
                                    Source="iconImageUpload.png"
                                    VerticalOptions="CenterAndExpand">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgImageUpload_Tapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </ext:CustomShadowFrame>

                        <Grid Grid.Row="2" RowDefinitions="Auto,Auto,Auto">
                            <ext:CustomShadowFrame
                                Grid.Row="0"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False"
                                HeightRequest="140">
                                <Editor
                                    x:Name="txtDescription"
                                    Margin="15"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Product Description *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="FillAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="1"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtQuantity"
                                    Margin="15"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Quantity *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="2"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtEstimation"
                                    Margin="15"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Total Price Estimation"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>
                        </Grid>

                        <Grid
                            Grid.Row="3"
                            Margin="10"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="20">
                            <StackLayout
                                Grid.Row="0"
                                Margin="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal">
                                <Image
                                    x:Name="imgPrefer"
                                    HeightRequest="25"
                                    HorizontalOptions="StartAndExpand"
                                    Source="iconUncheck.png"
                                    VerticalOptions="CenterAndExpand" />

                                <Label
                                    Margin="10,0,0,0"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Prefer Make in India Products"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkPrefer_Tapped" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                            <StackLayout
                                Grid.Row="1"
                                Margin="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal">
                                <Image
                                    x:Name="imgPickup"
                                    HeightRequest="25"
                                    HorizontalOptions="StartAndExpand"
                                    Source="iconUncheck.png"
                                    VerticalOptions="CenterAndExpand" />

                                <Label
                                    Margin="10,0,0,0"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Pickup product directly from seller"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkPickup_Tapped" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </Grid>

                        <Grid Grid.Row="4" RowDefinitions="Auto,Auto,Auto">
                            <ext:CustomShadowFrame
                                Grid.Row="0"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtLocationPinCode"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Delivery Location PIN Code *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="1"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtSourceSupply"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Preffred Source of Supply"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="2"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtDeliveryDate"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Expected Delivery Date"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>
                        </Grid>

                        <Grid Grid.Row="5" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">

                            <Label
                                Grid.Row="0"
                                Margin="10"
                                FontFamily="Poppins Medium"
                                FontSize="18"
                                HorizontalOptions="StartAndExpand"
                                Text="Billing Address"
                                TextColor="{StaticResource Black}"
                                VerticalOptions="CenterAndExpand" />

                            <ext:CustomShadowFrame
                                Grid.Row="1"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtName"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Name *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="2"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtBuilding"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Building *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="3"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtStreet"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Street *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="4"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtCity"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="City *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>

                            <ext:CustomShadowFrame
                                Grid.Row="5"
                                Margin="10"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <ext:ExtEntry
                                    x:Name="txtPinCode"
                                    Margin="15,10"
                                    FontFamily="Poppins"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="PIN Code *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                            </ext:CustomShadowFrame>
                        </Grid>

                        <Grid Grid.Row="6" RowDefinitions="Auto,Auto">

                            <ext:CustomShadowFrame
                                Grid.Row="0"
                                Margin="0,10"
                                Padding="0"
                                BackgroundColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <StackLayout Margin="0,10" Orientation="Horizontal">
                                    <Label
                                        Grid.Row="0"
                                        Margin="10,0,0,0"
                                        FontFamily="Poppins Medium"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        Text="Shipping Address"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Image
                                        x:Name="imgShippingDown"
                                        Margin="0,0,15,0"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkShipping_Tapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </ext:CustomShadowFrame>

                            <Grid
                                x:Name="grdShippingAddress"
                                Grid.Row="1"
                                IsVisible="False"
                                RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                                <ext:CustomShadowFrame
                                    Grid.Row="0"
                                    Margin="10"
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="{StaticResource LightGray}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <ext:ExtEntry
                                        x:Name="txtSAName"
                                        Margin="15,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        Placeholder="Name *"
                                        PlaceholderColor="{StaticResource Gray}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />
                                </ext:CustomShadowFrame>

                                <ext:CustomShadowFrame
                                    Grid.Row="1"
                                    Margin="10"
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="{StaticResource LightGray}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <ext:ExtEntry
                                        x:Name="txtSABuilding"
                                        Margin="15,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        Placeholder="Building *"
                                        PlaceholderColor="{StaticResource Gray}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />
                                </ext:CustomShadowFrame>

                                <ext:CustomShadowFrame
                                    Grid.Row="2"
                                    Margin="10"
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="{StaticResource LightGray}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <ext:ExtEntry
                                        x:Name="txtSAStreet"
                                        Margin="15,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        Placeholder="Street *"
                                        PlaceholderColor="{StaticResource Gray}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />
                                </ext:CustomShadowFrame>

                                <ext:CustomShadowFrame
                                    Grid.Row="3"
                                    Margin="10"
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="{StaticResource LightGray}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <ext:ExtEntry
                                        x:Name="txtSACity"
                                        Margin="15,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        Placeholder="City *"
                                        PlaceholderColor="{StaticResource Gray}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />
                                </ext:CustomShadowFrame>

                                <ext:CustomShadowFrame
                                    Grid.Row="4"
                                    Margin="10"
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="{StaticResource LightGray}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <ext:ExtEntry
                                        x:Name="txtSAPinCode"
                                        Margin="15,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        Placeholder="PIN Code *"
                                        PlaceholderColor="{StaticResource Gray}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />
                                </ext:CustomShadowFrame>

                                <ext:CustomShadowFrame
                                    Grid.Row="5"
                                    Margin="10"
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="{StaticResource LightGray}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <ext:ExtEntry
                                        x:Name="txtSALandmark"
                                        Margin="15,10"
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        HorizontalOptions="FillAndExpand"
                                        Placeholder="Landmark *"
                                        PlaceholderColor="{StaticResource Gray}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />
                                </ext:CustomShadowFrame>
                            </Grid>
                        </Grid>

                        <Grid
                            Grid.Row="7"
                            Margin="10"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="20">
                            <StackLayout
                                Grid.Row="0"
                                Margin="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal">
                                <Image
                                    x:Name="imgInsCoverage"
                                    HeightRequest="25"
                                    HorizontalOptions="StartAndExpand"
                                    Source="iconUncheck.png"
                                    VerticalOptions="CenterAndExpand" />

                                <Label
                                    Margin="10,0,0,0"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Do you need Insurance Coverage?"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkInsCoverage_Tapped" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                            <ext:CustomShadowFrame
                                Grid.Row="1"
                                Margin="0"
                                Padding="0"
                                BackgroundColor="{StaticResource Green}"
                                CornerRadius="5"
                                HasShadow="False"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand">
                                <Label
                                    Margin="0,10"
                                    FontFamily="Poppins Medium"
                                    FontSize="16"
                                    HorizontalOptions="CenterAndExpand"
                                    Text="Submit Requirement"
                                    TextColor="{StaticResource White}"
                                    VerticalOptions="CenterAndExpand" />
                                <ext:CustomShadowFrame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmSubmitRequirement_Tapped" />
                                </ext:CustomShadowFrame.GestureRecognizers>
                            </ext:CustomShadowFrame>
                        </Grid>
                    </Grid>
                </ScrollView>

            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>