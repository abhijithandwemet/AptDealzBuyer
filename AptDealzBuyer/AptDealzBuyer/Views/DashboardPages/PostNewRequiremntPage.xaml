<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AptDealzBuyer.Views.DashboardPages.PostNewRequiremntPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:AptDealzBuyer.Extention"
    xmlns:ffImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="ImgMenu"
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    HeightRequest="30"
                    HorizontalOptions="StartAndExpand"
                    Source="IconMenu.png"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgMenu_Tapped" />
                    </Image.GestureRecognizers>
                </Image>

                <Image
                    Grid.Column="1"
                    Margin="0"
                    Aspect="AspectFill"
                    HeightRequest="45"
                    HorizontalOptions="CenterAndExpand"
                    Source="iconHeaderLogo.png"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="45" />

                <StackLayout
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconNotification.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgNotification_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconQuestion.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgQuestion_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>

                <BoxView
                    Grid.ColumnSpan="3"
                    BackgroundColor="{StaticResource LightGray}"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="EndAndExpand" />
            </Grid>

            <Grid Grid.Row="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackLayout
                    Grid.Row="0"
                    Margin="15,15,0,0"
                    HorizontalOptions="StartAndExpand"
                    Orientation="Horizontal">
                    <Image
                        x:Name="ImgBack"
                        Margin="0"
                        Aspect="AspectFit"
                        HeightRequest="25"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconBackArrow.png"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="25">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgBack_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Label
                        Grid.Row="0"
                        Margin="5,0,0,0"
                        FontFamily="Poppins SemiBold"
                        FontSize="18"
                        HorizontalOptions="StartAndExpand"
                        Text="Post New Requirement"
                        TextColor="{StaticResource Black}"
                        VerticalOptions="CenterAndExpand" />
                </StackLayout>

                <ScrollView
                    Grid.Row="1"
                    Margin="20"
                    HorizontalScrollBarVisibility="Never"
                    VerticalOptions="StartAndExpand"
                    VerticalScrollBarVisibility="Never">
                    <Grid RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid
                            Grid.Row="0"
                            RowDefinitions="Auto,Auto,Auto"
                            RowSpacing="20">
                            <Frame Grid.Row="0" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtTitle"
                                    Placeholder="Requirement Title *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="1" Style="{StaticResource frmEntry}">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="0">
                                    <Picker
                                        x:Name="pkCategory"
                                        Title="Category"
                                        Grid.Column="0"
                                        Margin="0,0"
                                        FontFamily="Poppins"
                                        FontSize="15"
                                        HorizontalOptions="FillAndExpand"
                                        SelectedIndexChanged="pkCategory_SelectedIndexChanged"
                                        TextColor="{StaticResource Black}"
                                        TitleColor="{StaticResource DarkGray}"
                                        VerticalOptions="CenterAndExpand" />

                                    <ImageButton
                                        x:Name="BtnCategory"
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        BackgroundColor="Transparent"
                                        Clicked="BtnCategory_Clicked"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand" />
                                </Grid>
                            </Frame>

                            <Frame Grid.Row="2" Style="{StaticResource frmEntry}">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="0">
                                    <Picker
                                        x:Name="pkSubCategory"
                                        Title="Sub Category"
                                        Grid.Column="0"
                                        Margin="0"
                                        FontFamily="Poppins"
                                        FontSize="15"
                                        HorizontalOptions="FillAndExpand"
                                        SelectedIndexChanged="pkSubCategory_SelectedIndexChanged"
                                        TextColor="{StaticResource Black}"
                                        TitleColor="{StaticResource DarkGray}"
                                        VerticalOptions="CenterAndExpand" />

                                    <ImageButton
                                        x:Name="BtnSubCategory"
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        BackgroundColor="Transparent"
                                        Clicked="BtnSubCategory_Clicked"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand" />
                                </Grid>
                            </Frame>
                        </Grid>

                        <Frame
                            Grid.Row="1"
                            Margin="0"
                            Padding="0"
                            BackgroundColor="{StaticResource LightGray}"
                            CornerRadius="5"
                            HasShadow="False">
                            <Grid Margin="5" ColumnDefinitions="Auto,*,Auto,Auto">
                                <Frame
                                    Margin="0"
                                    Padding="0"
                                    BackgroundColor="{StaticResource LightGray}"
                                    CornerRadius="{OnPlatform Android=5,
                                                              iOS=10}"
                                    HasShadow="False"
                                    HeightRequest="70"
                                    WidthRequest="70">
                                    <ffImage:CachedImage
                                        x:Name="ImgProductImage"
                                        Grid.Column="0"
                                        Margin="0"
                                        Aspect="AspectFill"
                                        ErrorPlaceholder="imgUploadImage.png"
                                        HeightRequest="70"
                                        HorizontalOptions="CenterAndExpand"
                                        LoadingPlaceholder="imgUploadImage.png"
                                        Source="imgUploadImage.png"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="70" />
                                </Frame>

                                <Label
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    FontFamily="Poppins"
                                    FontSize="18"
                                    HorizontalOptions="CenterAndExpand"
                                    Text="Product Image"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />

                                <BoxView
                                    Grid.Column="2"
                                    BackgroundColor="{StaticResource White}"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    WidthRequest="1" />

                                <Image
                                    x:Name="ImgUplode"
                                    Grid.Column="3"
                                    Margin="10"
                                    HeightRequest="35"
                                    HorizontalOptions="EndAndExpand"
                                    Source="iconImageUpload.png"
                                    VerticalOptions="CenterAndExpand">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="UploadProductImage_Tapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </Frame>

                        <Grid
                            Grid.Row="2"
                            RowDefinitions="Auto,Auto,Auto"
                            RowSpacing="20">
                            <Frame
                                Grid.Row="0"
                                Margin="0"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False"
                                HeightRequest="140">
                                <Editor
                                    x:Name="txtDescription"
                                    Margin="15"
                                    FontFamily="Poppins"
                                    FontSize="15"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Product Description *"
                                    PlaceholderColor="{StaticResource Gray}"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="FillAndExpand" />
                            </Frame>

                            <Frame Grid.Row="1" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtQuantity"
                                    Keyboard="Numeric"
                                    Placeholder="Quantity *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="2" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtEstimation"
                                    Keyboard="Numeric"
                                    Placeholder="Total Price Estimation"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>
                        </Grid>

                        <Grid
                            Grid.Row="3"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="20">
                            <StackLayout
                                Grid.Row="0"
                                Margin="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal">
                                <Image
                                    x:Name="imgPrefer"
                                    HeightRequest="25"
                                    HorizontalOptions="StartAndExpand"
                                    Source="iconUncheck.png"
                                    VerticalOptions="CenterAndExpand" />

                                <Label
                                    Margin="10,0,0,0"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Prefer Make in India Products"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkPrefer_Tapped" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                            <StackLayout
                                Grid.Row="1"
                                Margin="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal">
                                <Image
                                    x:Name="imgPickup"
                                    HeightRequest="25"
                                    HorizontalOptions="StartAndExpand"
                                    Source="iconUncheck.png"
                                    VerticalOptions="CenterAndExpand" />

                                <Label
                                    Margin="10,0,0,0"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Pickup product directly from seller"
                                    TextColor="{StaticResource Black}"
                                    VerticalOptions="CenterAndExpand" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkPickup_Tapped" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </Grid>

                        <Grid
                            Grid.Row="4"
                            RowDefinitions="Auto,Auto,Auto"
                            RowSpacing="20">
                            <Frame Grid.Row="0" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtLocationPinCode"
                                    Keyboard="Numeric"
                                    Placeholder="Delivery Location PIN Code *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="1" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtSourceSupply"
                                    Placeholder="Preffred Source of Supply"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="2" Style="{StaticResource frmEntry}">
                                <!--<ext:ExtEntry
                                    x:Name="txtDeliveryDate"
                                    Placeholder="Expected Delivery Date"
                                    Style="{StaticResource entrPrimary}" />-->
                                <ext:ExtDatePicker
                                    x:Name="dpExpectedDeliveryDate"
                                    Grid.Column="0"
                                    Margin="10,0"
                                    BackgroundColor="Transparent"
                                    FontFamily="Poppins"
                                    FontSize="15"
                                    Format="MM/dd/yyyy"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Expected Delivery Date"
                                    TextColor="{StaticResource Black}" />
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ExpectedDeliveryDate_Tapped" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </Grid>

                        <Grid
                            Grid.Row="5"
                            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                            RowSpacing="20">

                            <Label
                                Grid.Row="0"
                                FontFamily="Poppins Medium"
                                FontSize="18"
                                HorizontalOptions="StartAndExpand"
                                Text="Billing Address"
                                TextColor="{StaticResource Black}"
                                VerticalOptions="CenterAndExpand" />

                            <Frame Grid.Row="1" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtName"
                                    Placeholder="Name *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="2" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtBuilding"
                                    Placeholder="Building *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="3" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtStreet"
                                    Placeholder="Street *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="4" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtCity"
                                    Placeholder="City *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>

                            <Frame Grid.Row="5" Style="{StaticResource frmEntry}">
                                <ext:ExtEntry
                                    x:Name="txtPinCode"
                                    Keyboard="Numeric"
                                    Placeholder="PIN Code *"
                                    Style="{StaticResource entrPrimary}" />
                            </Frame>
                        </Grid>

                        <Grid
                            Grid.Row="6"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="20">

                            <Frame
                                Grid.Row="0"
                                Margin="0,0"
                                Padding="0"
                                BackgroundColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <StackLayout Margin="0,10" Orientation="Horizontal">
                                    <Label
                                        Grid.Row="0"
                                        Margin="10,0,0,0"
                                        FontFamily="Poppins Medium"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        Text="Shipping Address"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Image
                                        x:Name="imgShippingDown"
                                        Margin="0,0,15,0"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkShipping_Tapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </Frame>

                            <Grid
                                x:Name="grdShippingAddress"
                                Grid.Row="1"
                                IsVisible="False"
                                RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                                RowSpacing="20">
                                <Frame Grid.Row="0" Style="{StaticResource frmEntry}">
                                    <ext:ExtEntry
                                        x:Name="txtSAName"
                                        Placeholder="Name *"
                                        Style="{StaticResource entrPrimary}" />
                                </Frame>

                                <Frame Grid.Row="1" Style="{StaticResource frmEntry}">
                                    <ext:ExtEntry
                                        x:Name="txtSABuilding"
                                        Placeholder="Building *"
                                        Style="{StaticResource entrPrimary}" />
                                </Frame>

                                <Frame Grid.Row="2" Style="{StaticResource frmEntry}">
                                    <ext:ExtEntry
                                        x:Name="txtSAStreet"
                                        Placeholder="Street *"
                                        Style="{StaticResource entrPrimary}" />
                                </Frame>

                                <Frame Grid.Row="3" Style="{StaticResource frmEntry}">
                                    <ext:ExtEntry
                                        x:Name="txtSACity"
                                        Placeholder="City *"
                                        Style="{StaticResource entrPrimary}" />
                                </Frame>

                                <Frame Grid.Row="4" Style="{StaticResource frmEntry}">
                                    <ext:ExtEntry
                                        x:Name="txtSAPinCode"
                                        Keyboard="Numeric"
                                        Placeholder="PIN Code *"
                                        Style="{StaticResource entrPrimary}" />
                                </Frame>

                                <Frame Grid.Row="5" Style="{StaticResource frmEntry}">
                                    <ext:ExtEntry
                                        x:Name="txtSALandmark"
                                        Placeholder="Landmark *"
                                        Style="{StaticResource entrPrimary}" />
                                </Frame>
                            </Grid>
                        </Grid>
                    </Grid>
                </ScrollView>

                <Grid
                    Grid.Row="2"
                    Padding="20,0,20,20"
                    RowDefinitions="Auto,Auto"
                    RowSpacing="20"
                    VerticalOptions="EndAndExpand">
                    <StackLayout
                        Grid.Row="0"
                        Margin="0"
                        HorizontalOptions="StartAndExpand"
                        Orientation="Horizontal">
                        <Image
                            x:Name="imgInsCoverage"
                            HeightRequest="25"
                            HorizontalOptions="StartAndExpand"
                            Source="iconUncheck.png"
                            VerticalOptions="CenterAndExpand" />

                        <Label
                            Margin="10,0,0,0"
                            FontFamily="Poppins"
                            FontSize="14"
                            HorizontalOptions="StartAndExpand"
                            Text="Do you need Insurance Coverage?"
                            TextColor="{StaticResource Black}"
                            VerticalOptions="CenterAndExpand" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkInsCoverage_Tapped" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <Frame
                        x:Name="FrmSubmitRequirement"
                        Grid.Row="1"
                        Margin="0"
                        Padding="0"
                        BackgroundColor="{StaticResource Green}"
                        CornerRadius="5"
                        HasShadow="False"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
                            FontFamily="Poppins Medium"
                            FontSize="15"
                            HorizontalOptions="CenterAndExpand"
                            Text="Submit Requirement"
                            TextColor="{StaticResource White}"
                            VerticalOptions="CenterAndExpand" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmSubmitRequirement_Tapped" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>