<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AptDealzBuyer.Views.DashboardPages.GrievanceDetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="ImgMenu"
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    HeightRequest="30"
                    HorizontalOptions="StartAndExpand"
                    Source="IconMenu.png"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgMenu_Tapped" />
                    </Image.GestureRecognizers>
                </Image>

                <ImageButton
                    x:Name="BtnLogo"
                    Grid.Column="1"
                    Clicked="BtnLogo_Clicked"
                    Style="{StaticResource imgLogo}" />

                <StackLayout
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconNotification.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgNotification_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconQuestion.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgQuestion_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
                <BoxView Grid.ColumnSpan="3" Style="{StaticResource boxHorizontal}" />
            </Grid>

            <Grid Grid.Row="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="5,5,5,0"
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="0">
                    <ImageButton
                        x:Name="ImgBack"
                        Grid.Column="0"
                        Clicked="ImgBack_Tapped"
                        Source="iconBackArrow.png"
                        Style="{StaticResource ImgBtnPrimary}" />
                    <Label
                        Grid.Column="1"
                        Style="{StaticResource lblHeader}"
                        Text="Grievance Details" />
                </Grid>

                <ScrollView Grid.Row="1" Style="{StaticResource scrPrimary}">
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="0">

                        <Grid
                            Grid.Row="0"
                            Margin="0"
                            HorizontalOptions="FillAndExpand"
                            RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackLayout Grid.Row="0">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Grievance ID" />

                                    <Label
                                        x:Name="lblGrievanceId"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="#GR123"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="1">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Order ID" />

                                    <Label
                                        x:Name="lblOrderId"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="#OR12"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="2">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Order Date" />

                                    <Label
                                        x:Name="lblOrderDate"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="22-12-2020"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="3">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Grievance Date" />

                                    <Label
                                        x:Name="lblGrievanceDate"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="22-12-2020"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="4">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Buyer Name" />

                                    <Label
                                        x:Name="lblBuyeName"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Han"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="5">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Grievance Type" />

                                    <Label
                                        x:Name="lblGrievanceType"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Delayed Delivery"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="6">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Status" />

                                    <Label
                                        x:Name="lblStatus"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Open"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="7">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Attached Documents" />

                                    <Label
                                        x:Name="lblNetAmount"
                                        Margin="0"
                                        FontFamily="Poppins-Medium"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Files"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>
                        </Grid>

                        <Grid
                            Grid.Row="1"
                            Padding="20"
                            RowSpacing="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Text Lorem ipsum Frame  -->
                            <StackLayout
                                Grid.Row="0"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand">
                                <Frame
                                    Padding="10"
                                    BackgroundColor="White"
                                    BorderColor="{StaticResource LightGray}"
                                    HeightRequest="80"
                                    Style="{StaticResource frmEntry}">
                                    <Editor
                                        AutoSize="TextChanges"
                                        FontFamily="Poppins"
                                        Keyboard="Text"
                                        Placeholder="Notes"
                                        Style="{StaticResource edPrimary}"
                                        TabIndex="1" />
                                </Frame>
                            </StackLayout>

                            <Grid
                                Grid.Row="1"
                                RowDefinitions="Auto,Auto"
                                RowSpacing="40">

                                <!--  Admin  -->
                                <Grid
                                    Grid.Row="0"
                                    ColumnDefinitions="Auto,*"
                                    ColumnSpacing="10">

                                    <StackLayout
                                        Grid.Column="0"
                                        HorizontalOptions="CenterAndExpand"
                                        Spacing="0"
                                        VerticalOptions="CenterAndExpand">
                                        <Image
                                            Margin="0"
                                            Aspect="Fill"
                                            HeightRequest="50"
                                            HorizontalOptions="CenterAndExpand"
                                            Source="iconUserGreen.png"
                                            VerticalOptions="CenterAndExpand"
                                            WidthRequest="50" />

                                        <Label
                                            Margin="0"
                                            FontFamily="Poppins-Medium"
                                            FontSize="16"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="Admin"
                                            TextColor="{StaticResource Black}"
                                            VerticalOptions="CenterAndExpand" />

                                    </StackLayout>

                                    <StackLayout Grid.Column="1" Spacing="{OnPlatform Android=0, iOS=7}">
                                        <Label Style="{StaticResource lblPrimary13}" Text="Response" />
                                        <Editor
                                            x:Name="txtAdminResponse"
                                            AutoSize="TextChanges"
                                            Style="{StaticResource edPrimary}" />
                                        <BoxView Style="{StaticResource boxHorizontal}" />
                                    </StackLayout>

                                </Grid>

                                <!--  Buyer  -->
                                <Grid
                                    Grid.Row="1"
                                    ColumnDefinitions="Auto,*"
                                    ColumnSpacing="10">

                                    <StackLayout
                                        Grid.Column="0"
                                        HorizontalOptions="CenterAndExpand"
                                        Spacing="0"
                                        VerticalOptions="CenterAndExpand">
                                        <Image
                                            Margin="0"
                                            Aspect="Fill"
                                            HeightRequest="50"
                                            HorizontalOptions="CenterAndExpand"
                                            Source="iconUserGreen.png"
                                            VerticalOptions="CenterAndExpand"
                                            WidthRequest="50" />

                                        <Label
                                            HorizontalOptions="CenterAndExpand"
                                            Style="{StaticResource lblLight}"
                                            Text="Buyer" />

                                    </StackLayout>

                                    <StackLayout Grid.Column="1" Spacing="{OnPlatform Android=0, iOS=7}">
                                        <Label Style="{StaticResource lblPrimary13}" Text="Response" />
                                        <Editor
                                            x:Name="txtBuyerResponse"
                                            AutoSize="TextChanges"
                                            Style="{StaticResource edPrimary}" />
                                        <BoxView Style="{StaticResource boxHorizontal}" />
                                    </StackLayout>
                                </Grid>
                            </Grid>

                            <!--  message  -->
                            <StackLayout Grid.Row="2" Spacing="5">
                                <Label Style="{StaticResource lblPrimary13}" Text="Enter your message" />
                                <Editor
                                    x:Name="txtMessage"
                                    Margin="10,0"
                                    AutoSize="TextChanges"
                                    Style="{StaticResource edPrimary}" />
                                <BoxView x:Name="BoxMessage" Style="{StaticResource boxHorizontal}" />
                            </StackLayout>

                            <!--  SubmitButton  -->
                            <Button
                                x:Name="frmGrievance"
                                Grid.Row="3"
                                Clicked="FrmSubmit_Tapped"
                                Style="{StaticResource btnPrimary}"
                                Text="Submit" />
                        </Grid>
                    </Grid>

                </ScrollView>

            </Grid>
        </Grid>

    </ContentPage.Content>
</ContentPage>