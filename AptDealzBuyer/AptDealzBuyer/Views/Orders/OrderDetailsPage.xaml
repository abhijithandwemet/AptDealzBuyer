<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AptDealzBuyer.Views.Orders.OrderDetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:skiaRate="clr-namespace:SkiaRate;assembly=SkiaRate.Forms"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="ImgMenu"
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    HeightRequest="30"
                    HorizontalOptions="StartAndExpand"
                    Source="IconMenu.png"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgMenu_Tapped" />
                    </Image.GestureRecognizers>
                </Image>

                <ImageButton
                    x:Name="BtnLogo"
                    Grid.Column="1"
                    Clicked="BtnLogo_Clicked"
                    Style="{StaticResource imgLogo}" />

                <StackLayout
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconNotification.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgNotification_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconQuestion.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgQuestion_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
                <BoxView Grid.ColumnSpan="3" Style="{StaticResource boxHorizontal}" />
            </Grid>

            <Grid Grid.Row="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="5,5,5,0"
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="0">
                    <ImageButton
                        x:Name="ImgBack"
                        Grid.Column="0"
                        Clicked="ImgBack_Tapped"
                        Source="iconBackArrow.png"
                        Style="{StaticResource ImgBtnPrimary}" />
                    <Label
                        Grid.Column="1"
                        Style="{StaticResource lblHeader}"
                        Text="Order Details" />
                </Grid>

                <ScrollView
                    x:Name="AllDetails"
                    Grid.Row="1"
                    Style="{StaticResource scrPrimary}">
                    <Grid RowDefinitions="Auto,*" RowSpacing="0">
                        <Grid
                            Grid.Row="0"
                            Margin="0"
                            HorizontalOptions="FillAndExpand"
                            RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackLayout Grid.Row="0">
                                <StackLayout
                                    Margin="20,5,20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Requirement ID" />

                                    <Label
                                        x:Name="lblRequirementId"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}"
                                        TextColor="{StaticResource Green}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="1">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Quote Reference No" />

                                    <Label
                                        x:Name="lblQuoteRefNo"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}"
                                        TextColor="{StaticResource Green}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="2">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Buyer Name" />

                                    <Label
                                        x:Name="lblBuyerName"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="3">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Seller Name" />

                                    <Label
                                        x:Name="lblSellerName"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="4">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        x:Name="lblPinCodeTitle"
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Shipping PIN Code" />

                                    <Label
                                        x:Name="lblShippingPINCode"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="5">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Requested Quantity" />

                                    <Label
                                        x:Name="lblRequestedQuantity"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="6">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Unit Price" />

                                    <Label
                                        x:Name="lblUnitPrice"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="7">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Net Amount" />

                                    <Label
                                        x:Name="lblNetAmount"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="8">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Handling Charges" />

                                    <Label
                                        x:Name="lblHandlingCharges"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="9">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Shipping Charges" />

                                    <Label
                                        x:Name="lblShippingCharges"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="10">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Insurance Charges " />

                                    <Label
                                        x:Name="lblInsuranceCharges"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView
                                    BackgroundColor="{StaticResource LightGray}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="EndAndExpand" />
                            </StackLayout>

                            <StackLayout Grid.Row="11">
                                <StackLayout
                                    Margin="20,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        HorizontalOptions="StartAndExpand"
                                        Style="{StaticResource lblLight}"
                                        Text="Origin of Products" />

                                    <Label
                                        x:Name="lblOriginProduct"
                                        FontSize="15"
                                        HorizontalOptions="EndAndExpand"
                                        Style="{StaticResource lblMedium}" />

                                </StackLayout>

                                <BoxView Style="{StaticResource boxHorizontal}" />
                            </StackLayout>
                        </Grid>

                        <Grid
                            Grid.Row="1"
                            Padding="20"
                            RowSpacing="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Frame
                                Grid.Row="0"
                                Margin="0"
                                Padding="15"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">

                                    <Grid
                                        Grid.Row="0"
                                        ColumnDefinitions="*,*"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <Label
                                            Grid.Column="0"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}"
                                            Text="Invoice Number" />
                                        <Label
                                            x:Name="lblInvoiceNo"
                                            Grid.Column="1"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}" />
                                    </Grid>

                                    <Grid
                                        Grid.Row="1"
                                        ColumnDefinitions="*,*"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <Label
                                            Grid.Column="0"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}"
                                            Text="Total Amount" />
                                        <Label
                                            x:Name="lblTotalAmount"
                                            Grid.Column="1"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}" />
                                    </Grid>

                                    <Grid
                                        Grid.Row="2"
                                        ColumnDefinitions="*,*"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <Label
                                            Grid.Column="0"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}"
                                            Text="Expected Delivery" />
                                        <Label
                                            x:Name="lblExpectedDate"
                                            Grid.Column="1"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}" />
                                    </Grid>

                                    <Grid
                                        Grid.Row="3"
                                        ColumnDefinitions="*,*"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <Label
                                            Grid.Column="0"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}"
                                            Text="Contact Seller" />

                                        <Label
                                            x:Name="lblSellerContact"
                                            Grid.Column="1"
                                            FontSize="15"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}" />

                                    </Grid>

                                    <StackLayout
                                        Grid.Row="4"
                                        HorizontalOptions="CenterAndExpand"
                                        Orientation="Horizontal"
                                        VerticalOptions="CenterAndExpand">
                                        <Image
                                            Aspect="AspectFit"
                                            HeightRequest="25"
                                            HorizontalOptions="EndAndExpand"
                                            Source="iconTickRound.png"
                                            VerticalOptions="CenterAndExpand"
                                            WidthRequest="25" />

                                        <Label
                                            x:Name="lblOrderStatus"
                                            HorizontalOptions="StartAndExpand"
                                            Style="{StaticResource lblLight}"
                                            TextColor="{StaticResource Green}" />

                                    </StackLayout>

                                    <Grid
                                        x:Name="grdTrackRaise"
                                        Grid.Row="5"
                                        ColumnDefinitions="*,*"
                                        ColumnSpacing="10">

                                        <Button
                                            Grid.Column="0"
                                            BorderWidth="1"
                                            Clicked="FrmTrackOrder_Tapped"
                                            FontSize="15"
                                            HeightRequest="40"
                                            Style="{StaticResource btnBorder}"
                                            Text="Track Order" />

                                        <Button
                                            Grid.Column="1"
                                            Padding="5,0"
                                            BorderWidth="1"
                                            Clicked="FrmRaiseGrievance_Tapped"
                                            FontSize="15"
                                            HeightRequest="40"
                                            Style="{StaticResource btnBorder}"
                                            Text="Raise Grievance" />

                                    </Grid>
                                </Grid>
                            </Frame>

                            <Grid Grid.Row="1" RowDefinitions="Auto,Auto">

                                <Button
                                    Grid.Row="0"
                                    Clicked="BtnCancelOrder_Tapped"
                                    Style="{StaticResource btnPrimary}"
                                    Text="Cancel Order" />
                                <Label
                                    Grid.Row="1"
                                    FontSize="12"
                                    HorizontalOptions="CenterAndExpand"
                                    Style="{StaticResource lblLight}"
                                    Text="(Visible for 1 hr from payment)" />

                            </Grid>

                            <Grid
                                Grid.Row="1"
                                IsVisible="False"
                                RowDefinitions="Auto,Auto">

                                <Grid Grid.Row="0" RowDefinitions="Auto,Auto,Auto">

                                    <Grid Grid.Row="0" ColumnDefinitions="*,150,*">

                                        <Label
                                            Grid.Column="0"
                                            HorizontalOptions="StartAndExpand"
                                            Style="{StaticResource lblLight}"
                                            Text="Rate Seller" />

                                        <skiaRate:RatingView
                                            x:Name="rvSeller"
                                            Grid.Column="1"
                                            ColorOn="{StaticResource Green}"
                                            Count="5"
                                            HorizontalOptions="FillAndExpand"
                                            OutlineOffColor="{StaticResource Green}"
                                            RatingType="Half"
                                            VerticalOptions="FillAndExpand"
                                            Value="0" />

                                        <Frame
                                            Grid.Column="2"
                                            Margin="0"
                                            Padding="0"
                                            BackgroundColor="Transparent"
                                            BorderColor="{StaticResource Green}"
                                            CornerRadius="5"
                                            HasShadow="False"
                                            HorizontalOptions="EndAndExpand"
                                            VerticalOptions="CenterAndExpand">
                                            <Label
                                                Grid.Column="1"
                                                FontSize="15"
                                                HorizontalOptions="CenterAndExpand"
                                                Style="{StaticResource lblMedium}"
                                                Text="Rate"
                                                TextColor="{StaticResource Green}" />
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="BtnCancelOrder_Tapped" />
                                            </Frame.GestureRecognizers>
                                        </Frame>

                                    </Grid>

                                    <Grid Grid.Row="1" ColumnDefinitions="*,150,*">

                                        <Label
                                            Grid.Column="0"
                                            HorizontalOptions="StartAndExpand"
                                            Style="{StaticResource lblLight}"
                                            Text="Rate Product" />

                                        <skiaRate:RatingView
                                            x:Name="rvProduct"
                                            Grid.Column="1"
                                            ColorOn="{StaticResource Green}"
                                            Count="5"
                                            HorizontalOptions="FillAndExpand"
                                            OutlineOffColor="{StaticResource Green}"
                                            RatingType="Half"
                                            VerticalOptions="FillAndExpand"
                                            Value="0" />

                                        <Frame
                                            Grid.Column="2"
                                            Margin="0"
                                            Padding="0"
                                            BackgroundColor="Transparent"
                                            BorderColor="{StaticResource Green}"
                                            CornerRadius="5"
                                            HasShadow="False"
                                            HorizontalOptions="EndAndExpand"
                                            VerticalOptions="CenterAndExpand">
                                            <Label
                                                Grid.Column="1"
                                                FontSize="15"
                                                HorizontalOptions="CenterAndExpand"
                                                Style="{StaticResource lblMedium}"
                                                Text="Rate"
                                                TextColor="{StaticResource Green}" />
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="BtnCancelOrder_Tapped" />
                                            </Frame.GestureRecognizers>
                                        </Frame>

                                    </Grid>

                                    <Grid Grid.Row="2" ColumnDefinitions="*,150,*">

                                        <Label
                                            Grid.Column="0"
                                            HorizontalOptions="StartAndExpand"
                                            Style="{StaticResource lblLight}"
                                            Text="Rate AptDealz" />

                                        <skiaRate:RatingView
                                            x:Name="rvAptDealz"
                                            Grid.Column="1"
                                            ColorOn="{StaticResource Green}"
                                            Count="5"
                                            HorizontalOptions="FillAndExpand"
                                            OutlineOffColor="{StaticResource Green}"
                                            RatingType="Half"
                                            VerticalOptions="FillAndExpand"
                                            Value="0" />

                                        <Frame
                                            Grid.Column="2"
                                            Margin="0"
                                            Padding="0"
                                            BackgroundColor="Transparent"
                                            BorderColor="{StaticResource Green}"
                                            CornerRadius="5"
                                            HasShadow="False"
                                            HorizontalOptions="EndAndExpand"
                                            VerticalOptions="CenterAndExpand">
                                            <Label
                                                Grid.Column="1"
                                                FontSize="15"
                                                HorizontalOptions="CenterAndExpand"
                                                Style="{StaticResource lblMedium}"
                                                Text="Rate"
                                                TextColor="{StaticResource Green}" />
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="BtnCancelOrder_Tapped" />
                                            </Frame.GestureRecognizers>
                                        </Frame>

                                    </Grid>

                                </Grid>

                                <Grid
                                    Grid.Row="1"
                                    ColumnDefinitions="*,*"
                                    ColumnSpacing="20"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand">
                                    <Frame
                                        Grid.Column="0"
                                        Margin="0"
                                        Padding="0"
                                        BackgroundColor="{StaticResource Green}"
                                        CornerRadius="5"
                                        HasShadow="False"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="StartAndExpand">
                                        <Label
                                            Grid.Column="1"
                                            FontSize="15"
                                            HorizontalOptions="CenterAndExpand"
                                            LineBreakMode="WordWrap"
                                            Style="{StaticResource lblMedium}"
                                            Text="Repost Reqt"
                                            TextColor="{StaticResource White}" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmTrackOrder_Tapped" />
                                        </Frame.GestureRecognizers>
                                    </Frame>

                                    <StackLayout Grid.Column="1">

                                        <Frame
                                            Grid.Column="1"
                                            Margin="0"
                                            Padding="0"
                                            BackgroundColor="{StaticResource Green}"
                                            CornerRadius="5"
                                            HasShadow="False"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="StartAndExpand">
                                            <Label
                                                Grid.Column="1"
                                                FontSize="15"
                                                HorizontalOptions="CenterAndExpand"
                                                LineBreakMode="WordWrap"
                                                Style="{StaticResource lblMedium}"
                                                Text="Raise Grievance"
                                                TextColor="{StaticResource White}" />
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmRaiseGrievance_Tapped" />
                                            </Frame.GestureRecognizers>
                                        </Frame>
                                        <Label
                                            FontSize="12"
                                            HorizontalOptions="CenterAndExpand"
                                            Style="{StaticResource lblLight}"
                                            Text="(Visible up to 48 hrs of delivery)" />
                                    </StackLayout>
                                </Grid>

                            </Grid>
                        </Grid>
                    </Grid>

                </ScrollView>

                <Label
                    x:Name="lblCancelledOrder"
                    Grid.Row="1"
                    FontSize="15"
                    HorizontalOptions="CenterAndExpand"
                    IsVisible="false"
                    Style="{StaticResource lblMedium}"
                    Text="This Order is Cancelled" />
            </Grid>
        </Grid>

    </ContentPage.Content>
</ContentPage>