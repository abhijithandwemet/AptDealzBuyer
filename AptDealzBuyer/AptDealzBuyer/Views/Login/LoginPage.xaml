<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AptDealzBuyer.Views.Login.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:AptDealzBuyer.Extention"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <!--<ext:ExtKeyboard>-->
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid Grid.Row="0" ColumnDefinitions="60,*,60">
                <Image
                    x:Name="ImgBack"
                    Grid.Column="0"
                    HeightRequest="25"
                    HorizontalOptions="CenterAndExpand"
                    Source="iconBackArrow.png"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgBack_Tapped" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>

            <Grid
                Grid.Row="1"
                Padding="20"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" Spacing="0">
                    <Image
                        Aspect="AspectFill"
                        HeightRequest="120"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconLogo.png"
                        VerticalOptions="CenterAndExpand" />

                    <Label
                        Margin="0"
                        FontFamily="Poppins Medium"
                        FontSize="18"
                        HorizontalOptions="CenterAndExpand"
                        Text="Welcome Back"
                        TextColor="{StaticResource Black}"
                        VerticalOptions="CenterAndExpand" />

                    <Label
                        Margin="0"
                        FontFamily="Poppins"
                        FontSize="14"
                        HorizontalOptions="CenterAndExpand"
                        Text="Login to your AptDealz Account"
                        TextColor="{StaticResource Black}"
                        VerticalOptions="CenterAndExpand" />
                </StackLayout>

                <Grid
                    Grid.Row="1"
                    RowDefinitions="Auto,*"
                    VerticalOptions="CenterAndExpand">

                    <StackLayout
                        Grid.Row="0"
                        HorizontalOptions="FillAndExpand"
                        Spacing="20"
                        VerticalOptions="CenterAndExpand">

                        <Frame Style="{StaticResource frmEntryGray}">
                            <ext:ExtEntry
                                x:Name="txtUserAuth"
                                Placeholder="Email / Phone Number"
                                Style="{StaticResource entrGray}" />
                        </Frame>

                        <StackLayout
                            HorizontalOptions="StartAndExpand"
                            Orientation="Horizontal"
                            VerticalOptions="CenterAndExpand">
                            <Image
                                x:Name="imgCheck"
                                HeightRequest="25"
                                HorizontalOptions="StartAndExpand"
                                Source="iconCheck.png"
                                VerticalOptions="CenterAndExpand" />

                            <Label
                                Margin="10,0,0,0"
                                FontFamily="Poppins"
                                FontSize="14"
                                HorizontalOptions="StartAndExpand"
                                Text="Keep me logged in"
                                TextColor="{StaticResource Black}"
                                VerticalOptions="CenterAndExpand" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkRemember_Tapped" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>

                    <Frame
                        x:Name="FrmGetOtp"
                        Grid.Row="1"
                        Margin="0,30"
                        Padding="0"
                        BackgroundColor="{StaticResource Green}"
                        CornerRadius="5"
                        HasShadow="False"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="EndAndExpand">
                        <Label
                            FontFamily="Poppins Medium"
                            HorizontalOptions="CenterAndExpand"
                            Text="Get OTP"
                            TextColor="{StaticResource White}"
                            VerticalOptions="CenterAndExpand" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmGetOtp_Tapped" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>

                <StackLayout
                    Grid.Row="2"
                    Margin="0,20,0,10"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal">

                    <Label
                        Margin="10,0,0,0"
                        FontFamily="Poppins Medium"
                        FontSize="15"
                        HorizontalOptions="EndAndExpand"
                        Text="Don't have an Account ?"
                        TextColor="{StaticResource Black}"
                        VerticalOptions="CenterAndExpand" />

                    <Label
                        Margin="10,0,0,0"
                        FontFamily="Poppins Medium"
                        FontSize="15"
                        HorizontalOptions="StartAndExpand"
                        Text="Sign Up"
                        TextColor="{StaticResource Green}"
                        VerticalOptions="CenterAndExpand" />
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkSignup_Tapped" />
                    </StackLayout.GestureRecognizers>
                </StackLayout>
            </Grid>

        </Grid>
        <!--</ext:ExtKeyboard>-->
    </ContentPage.Content>
</ContentPage>