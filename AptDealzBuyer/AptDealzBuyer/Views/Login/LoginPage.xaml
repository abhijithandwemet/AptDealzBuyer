<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AptDealzBuyer.Views.Login.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:AptDealzBuyer.Extention"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ext:ExtKeyboard>
            <Grid
                HorizontalOptions="FillAndExpand"
                RowSpacing="0"
                VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" ColumnDefinitions="60,*,60">
                    <Image
                        x:Name="ImgBack"
                        Grid.Column="0"
                        HeightRequest="25"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconBackArrow.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgBack_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>

                <Grid Grid.Row="1" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackLayout
                        Grid.Row="0"
                        Margin="0,10,0,0"
                        Spacing="5">
                        <Image
                            Aspect="AspectFill"
                            HeightRequest="120"
                            HorizontalOptions="CenterAndExpand"
                            Source="iconLogo.png"
                            VerticalOptions="CenterAndExpand" />

                        <Label
                            Margin="0"
                            FontFamily="Poppins Medium"
                            FontSize="18"
                            HorizontalOptions="CenterAndExpand"
                            Text="Welcome Back"
                            TextColor="{StaticResource Black}"
                            VerticalOptions="CenterAndExpand" />

                        <Label
                            Margin="0"
                            FontFamily="Poppins"
                            FontSize="14"
                            HorizontalOptions="CenterAndExpand"
                            Text="Login to your AptDealz Account"
                            TextColor="{StaticResource Black}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>

                    <StackLayout
                        Grid.Row="1"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <ext:CustomShadowFrame
                            Margin="30,10"
                            Padding="0"
                            BackgroundColor="{StaticResource LightGray}"
                            CornerRadius="5"
                            HasShadow="False">
                            <ext:ExtEntry
                                x:Name="txtEmailAddress"
                                Margin="20,0"
                                FontFamily="Poppins"
                                FontSize="16"
                                HeightRequest="50"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Email / Phone Number"
                                PlaceholderColor="{StaticResource Gray}"
                                TextColor="{StaticResource Black}"
                                VerticalOptions="FillAndExpand"
                                VerticalTextAlignment="Center" />
                        </ext:CustomShadowFrame>

                        <StackLayout
                            Margin="30,10,20,0"
                            HorizontalOptions="StartAndExpand"
                            Orientation="Horizontal"
                            VerticalOptions="CenterAndExpand">
                            <Image
                                x:Name="imgCheck"
                                HeightRequest="25"
                                HorizontalOptions="StartAndExpand"
                                Source="iconCheck.png"
                                VerticalOptions="CenterAndExpand" />

                            <Label
                                Margin="10,0,0,0"
                                FontFamily="Poppins"
                                FontSize="14"
                                HorizontalOptions="StartAndExpand"
                                Text="Keep me logged in"
                                TextColor="{StaticResource Black}"
                                VerticalOptions="CenterAndExpand" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkRemember_Tapped" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>

                    <ext:CustomShadowFrame
                        x:Name="FrmGetOtp"
                        Grid.Row="2"
                        Margin="20,0"
                        Padding="10,5"
                        BackgroundColor="{StaticResource Green}"
                        CornerRadius="5"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
                            Margin="15,10"
                            FontFamily="Poppins Medium"
                            HorizontalOptions="CenterAndExpand"
                            Text="Get OTP"
                            TextColor="{StaticResource White}"
                            VerticalOptions="CenterAndExpand" />
                        <ext:CustomShadowFrame.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmGetOtp_Tapped" />
                        </ext:CustomShadowFrame.GestureRecognizers>
                    </ext:CustomShadowFrame>

                    <StackLayout
                        Grid.Row="3"
                        Margin="20,20,20,30"
                        HorizontalOptions="CenterAndExpand"
                        Orientation="Horizontal">

                        <Label
                            Margin="10,0,0,0"
                            FontFamily="Poppins Medium"
                            FontSize="16"
                            HorizontalOptions="EndAndExpand"
                            Text="Don't have an Account ?"
                            TextColor="{StaticResource Black}"
                            VerticalOptions="CenterAndExpand" />

                        <Label
                            Margin="10,0,0,0"
                            FontFamily="Poppins Medium"
                            FontSize="16"
                            HorizontalOptions="StartAndExpand"
                            Text="Sign Up"
                            TextColor="{StaticResource Green}"
                            VerticalOptions="CenterAndExpand" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="StkSignup_Tapped" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

