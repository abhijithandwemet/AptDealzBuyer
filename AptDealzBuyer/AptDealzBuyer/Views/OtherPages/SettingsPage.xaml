<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AptDealzBuyer.Views.OtherPages.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:AptDealzBuyer.Extention"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="ImgMenu"
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    HeightRequest="40"
                    HorizontalOptions="StartAndExpand"
                    Source="IconMenu.png"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgMenu_Tapped" />
                    </Image.GestureRecognizers>
                </Image>

                <ImageButton
                    x:Name="BtnLogo"
                    Grid.Column="1"
                    Clicked="BtnLogo_Clicked"
                    Style="{StaticResource imgLogo}" />

                <StackLayout
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <Image
                        Margin="0"
                        HeightRequest="40"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconNotification.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgNotification_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        Margin="0"
                        HeightRequest="40"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconQuestion.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgQuestion_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
                <BoxView Grid.ColumnSpan="3" Style="{StaticResource boxHorizontal}" />
            </Grid>


            <Grid Grid.Row="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Back / Title  -->
                <Grid
                    Grid.Row="0"
                    Margin="5,5,5,0"
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="0">
                    <ImageButton
                        x:Name="ImgBack"
                        Grid.Column="0"
                        Clicked="ImgBack_Tapped"
                        Source="iconBackArrow.png"
                        Style="{StaticResource ImgBtnPrimary}" />
                    <Label
                        Grid.Column="1"
                        Style="{StaticResource lblHeader}"
                        Text="Deactivate Account" />
                </Grid>

                <ScrollView Grid.Row="1" Style="{StaticResource scrPrimary}">

                    <Grid Margin="0" RowDefinitions="Auto,Auto,Auto,Auto">

                        <Grid
                            Grid.Row="0"
                            Margin="30,10"
                            ColumnDefinitions="*,*">

                            <Label
                                Grid.Column="0"
                                Style="{StaticResource lblLight}"
                                HorizontalOptions="StartAndExpand"
                                LineBreakMode="WordWrap"
                                Text="Language"
                               />

                            <ext:ExtShadowFrame
                                Grid.Column="1"
                                Margin="0"
                                Padding="0"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <StackLayout Orientation="Horizontal">
                                    <Picker
                                        x:Name="pkLanguage"
                                        Title="Language"
                                        Margin="15,15,0,15"
                                        FontFamily="Poppins"
                                        FontSize="15"
                                        HorizontalOptions="FillAndExpand"
                                        TextColor="{StaticResource Black}"
                                        TitleColor="{StaticResource Black}"
                                        VerticalOptions="FillAndExpand" />

                                    <Image
                                        Margin="0,15,15,15"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgLanguage_Tapped" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>
                            </ext:ExtShadowFrame>

                        </Grid>

                        <Grid
                            Grid.Row="1"
                            Margin="30,10"
                            ColumnDefinitions="*,*">

                            <Label
                                Grid.Column="0"
                                Margin="0"
                               Style="{StaticResource lblLight}"
                                HorizontalOptions="StartAndExpand"
                                LineBreakMode="WordWrap"
                                Text="Display Mode"
                                />

                            <Grid
                                Grid.Column="1"
                                ColumnDefinitions="*,*"
                                ColumnSpacing="20">
                                <ext:ExtShadowFrame
                                    Grid.Column="0"
                                    Margin="0"
                                    Padding="0"
                                    BackgroundColor="#CAF3DB"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <Label
                                        Margin="0,10"
                                       Style="{StaticResource lblLight}"
                                        HorizontalOptions="CenterAndExpand"
                                        LineBreakMode="WordWrap"
                                        Text="Light"
                                         />
                                </ext:ExtShadowFrame>

                                <ext:ExtShadowFrame
                                    Grid.Column="1"
                                    Margin="0"
                                    Padding="0"
                                    BackgroundColor="{StaticResource Green}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <Label
                                        Margin="0,10"
                                       Style="{StaticResource lblLight}"
                                        HorizontalOptions="CenterAndExpand"
                                        LineBreakMode="WordWrap"
                                        Text="Dark"
                                        TextColor="{StaticResource White}"
                                         />
                                </ext:ExtShadowFrame>
                            </Grid>

                        </Grid>

                        <Grid
                            Grid.Row="2"
                            Margin="30,10"
                            ColumnDefinitions="*,*">

                            <Label
                                Grid.Column="0"
                                Margin="0"
                              Style="{StaticResource lblLight}"
                                HorizontalOptions="StartAndExpand"
                                LineBreakMode="WordWrap"
                                Text="Alert Tone"
                                />

                            <ext:ExtShadowFrame
                                Grid.Column="1"
                                Margin="0"
                                Padding="0"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <StackLayout Orientation="Horizontal">
                                    <Picker
                                        x:Name="pkAlertTone"
                                        Title="Tone"
                                        Margin="15,15,0,15"
                                        FontFamily="Poppins"
                                        FontSize="15"
                                        HorizontalOptions="FillAndExpand"
                                        TextColor="{StaticResource Black}"
                                        TitleColor="{StaticResource Black}"
                                        VerticalOptions="FillAndExpand" />

                                    <Image
                                        Margin="0,15,15,15"
                                        HeightRequest="25"
                                        HorizontalOptions="EndAndExpand"
                                        Source="iconDownArrow.png"
                                        VerticalOptions="CenterAndExpand">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgAlertTone_Tapped" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>
                            </ext:ExtShadowFrame>

                        </Grid>

                        <Grid
                            Grid.Row="3"
                            Margin="30,10"
                            ColumnDefinitions="*,*">

                            <Label
                                Grid.Column="0"
                                Style="{StaticResource lblLight}"
                                HorizontalOptions="StartAndExpand"
                                LineBreakMode="WordWrap"
                                Text="Mute Notifications"
                                />

                            <Image
                                x:Name="imgSwitch"
                                Grid.Column="1"
                                Margin="0"
                                Aspect="AspectFill"
                                HeightRequest="30"
                                HorizontalOptions="EndAndExpand"
                                Source="iconSwitchOff.png"
                                VerticalOptions="CenterAndExpand">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgSwitch_Tapped" />
                                </Image.GestureRecognizers>
                            </Image>

                        </Grid>

                    </Grid>

                </ScrollView>

            </Grid>
        </Grid>

    </ContentPage.Content>
</ContentPage>